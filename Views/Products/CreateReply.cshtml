

@model GroupProject.Models.Reply
@{
    ViewData["Title"] = "CreateReply";
}

<h1>CreateReply</h1>



<h1>Reply to Review</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CreateReply">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" value="Admin" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyText" class="control-label"></label>
                <textarea asp-for="ReplyText" class="form-control"></textarea>
                <span asp-validation-for="ReplyText" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create Reply" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="ReviewIndex">Back to products</a>
            </div>
        </form>
    </div>
</div>